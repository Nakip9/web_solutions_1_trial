---
import MainLayout from "../../layouts/MainLayout.astro";
import Navbar from "../../components/sections/Navbar.astro";
import Footer from "../../components/sections/Footer.astro";
// 1. FIX DATA ERROR: Import CollectionEntry type
import { getCollection, type CollectionEntry } from "astro:content";
import {
  ArrowRight,
  Calendar,
  Clock,
  Share2,
  ArrowUpRight,
} from "lucide-react";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// 2. FIX DATA ERROR: Define the Props interface
interface Props {
  entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const heroImage = entry.data.image || "/images/image_1.png";
---

<MainLayout
  title={`${entry.data.title} | مدونة إراتيك`}
  description={entry.data.description}
>
  <Navbar />

  {/* Reading Progress Bar */}
  <div class="fixed top-0 left-0 right-0 h-1.5 z-[1000] bg-slate-100">
    <div
      id="progress-bar"
      class="h-full bg-primary w-0 transition-all duration-150 ease-out"
    >
    </div>
  </div>

  <main class="min-h-screen bg-white">
    {/* --- HERO SECTION --- */}
    <section class="relative pt-24 pb-8 md:pt-36 md:pb-16 px-4 md:px-6">
      <div class="container mx-auto max-w-4xl">
        {/* Navigation & Tags */}
        <div
          class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8"
        >
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-sm font-bold text-slate-500 hover:text-primary transition-colors group p-2 -mr-2"
          >
            {/* 3. FIX CLASS ERROR: Use className for React Components */}
            <ArrowRight
              className="w-4 h-4 transition-transform group-hover:-translate-x-1"
            />
            <span>العودة للمقالات</span>
          </a>

          <div class="flex flex-wrap gap-2">
            {
              entry.data.tags.map((tag) => (
                <span class="px-3 py-1.5 rounded-xl bg-primary/5 text-primary text-xs font-bold border border-primary/10">
                  {tag}
                </span>
              ))
            }
          </div>
        </div>

        {/* Title */}
        <h1
          class="text-3xl md:text-5xl lg:text-7xl font-black text-slate-900 leading-[1.2] md:leading-[1.1] mb-8 tracking-tight"
        >
          {entry.data.title}
        </h1>

        {/* Meta Data */}
        <div
          class="flex flex-wrap items-center gap-y-4 gap-x-8 text-sm border-b border-slate-100 pb-8 mb-8"
        >
          {/* Author */}
          <div class="flex items-center gap-3">
            <div
              class="w-10 h-10 md:w-12 md:h-12 rounded-full ring-2 ring-white shadow-lg bg-slate-100 overflow-hidden"
            >
              <img
                src="/images/image_1.png"
                alt="Author"
                class="w-full h-full object-cover"
              />
            </div>
            <div>
              <span class="block font-bold text-slate-900 text-base"
                >{entry.data.author}</span
              >
              <span class="text-slate-500 text-xs">خبير تقني</span>
            </div>
          </div>

          {/* Date */}
          <div
            class="flex items-center gap-2 text-slate-500 bg-slate-50 px-3 py-2 rounded-lg"
          >
            <Calendar className="w-4 h-4 text-primary" />
            <time datetime={entry.data.publishDate.toISOString()}>
              {
                new Date(entry.data.publishDate).toLocaleDateString("ar-EG", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })
              }
            </time>
          </div>

          {/* Read Time */}
          <div
            class="flex items-center gap-2 text-slate-500 bg-slate-50 px-3 py-2 rounded-lg mr-auto sm:mr-0"
          >
            <Clock className="w-4 h-4 text-secondary" />
            <span>5 د قراءة</span>
          </div>
        </div>

        {/* Hero Image */}
        <div
          class="relative w-full rounded-[2rem] overflow-hidden shadow-2xl shadow-slate-200 mb-12 group"
        >
          <div class="aspect-[4/3] md:aspect-[21/9] relative">
            <img
              src={heroImage}
              alt={entry.data.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105"
            />
            <div
              class="absolute inset-0 bg-gradient-to-tr from-primary/10 to-transparent pointer-events-none mix-blend-overlay"
            >
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* --- CONTENT SECTION --- */}
    <article class="pb-16 md:pb-24 px-4 md:px-6">
      <div class="container mx-auto max-w-3xl">
        <div
          class="prose prose-lg md:prose-xl prose-slate max-w-none
            prose-headings:font-black prose-headings:tracking-tight prose-headings:text-slate-900 prose-headings:scroll-mt-20
            prose-p:text-slate-600 prose-p:leading-8 prose-p:text-base md:prose-p:text-lg
            prose-a:text-primary prose-a:font-bold prose-a:no-underline hover:prose-a:underline
            prose-img:rounded-3xl prose-img:shadow-xl prose-img:my-8 prose-img:w-full
            prose-blockquote:border-r-4 prose-blockquote:border-primary prose-blockquote:bg-surface prose-blockquote:py-6 prose-blockquote:px-8 prose-blockquote:rounded-3xl prose-blockquote:not-italic prose-blockquote:shadow-sm
            prose-li:marker:text-primary"
        >
          <Content />
        </div>
      </div>
    </article>

    {/* --- CTA SECTION --- */}
    <section class="pb-32 px-4 md:px-6">
      <div class="container mx-auto max-w-4xl">
        <div
          class="bg-gradient-to-br from-slate-900 to-slate-800 rounded-[2.5rem] p-8 md:p-12 relative overflow-hidden text-center shadow-2xl shadow-slate-900/20"
        >
          <div
            class="absolute top-0 right-0 w-64 h-64 bg-primary/20 rounded-full blur-[100px] translate-x-1/2 -translate-y-1/2 animate-pulse-slow"
          >
          </div>
          <div
            class="absolute bottom-0 left-0 w-64 h-64 bg-secondary/20 rounded-full blur-[100px] -translate-x-1/2 translate-y-1/2 animate-pulse-slow"
            style="animation-delay: 1s;"
          >
          </div>

          <div class="relative z-10">
            <h3 class="text-2xl md:text-4xl font-black text-white mb-4">
              هل ألهمك هذا المقال؟
            </h3>
            <p
              class="text-slate-300 text-base md:text-lg mb-8 max-w-lg mx-auto leading-relaxed"
            >
              نحن لا نكتب عن المستقبل فقط، بل نبنيه. دعنا نناقش كيف يمكننا تطبيق
              هذه الأفكار في مشروعك القادم.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/contact"
                class="px-8 py-4 bg-primary text-white rounded-2xl font-bold hover:bg-primary/90 transition-all hover:-translate-y-1 shadow-lg shadow-primary/25 flex items-center justify-center gap-2"
              >
                <span>ابدأ مشروعك</span>
                <ArrowUpRight className="w-5 h-5" />
              </a>
              <button
                class="px-8 py-4 bg-white/5 backdrop-blur-md text-white border border-white/10 rounded-2xl font-bold hover:bg-white/10 transition-all flex items-center justify-center gap-2 group"
              >
                <Share2
                  className="w-5 h-5 group-hover:text-primary transition-colors"
                />
                <span>مشاركة</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  {/* --- MOBILE FLOATING SHARE BAR --- */}
  <div
    class="fixed bottom-6 left-1/2 -translate-x-1/2 z-50 md:hidden flex items-center gap-2 p-2 bg-slate-900/90 backdrop-blur-xl rounded-full border border-white/10 shadow-2xl shadow-black/20"
  >
    <a
      href="/contact"
      class="px-6 py-3 bg-primary rounded-full text-white text-sm font-bold flex items-center gap-2"
    >
      <span>تواصل معنا</span>
    </a>
    <button
      class="w-11 h-11 bg-white/10 rounded-full flex items-center justify-center text-white hover:bg-white/20"
    >
      <Share2 className="w-5 h-5" />
    </button>
  </div>

  <Footer />
</MainLayout>

<script>
  const progressBar = document.getElementById("progress-bar");

  function updateProgress() {
    const scrollTop = window.scrollY || document.documentElement.scrollTop;
    const scrollHeight =
      document.documentElement.scrollHeight -
      document.documentElement.clientHeight;
    const scrollPercentage = (scrollTop / scrollHeight) * 100;

    if (progressBar) {
      progressBar.style.width = `${scrollPercentage}%`;
    }
  }

  window.addEventListener("scroll", updateProgress);
</script>

<style>
  .prose {
    font-feature-settings: "ss01", "ss02";
  }
</style>

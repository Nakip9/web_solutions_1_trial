---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/sections/Navbar.astro";
import Footer from "../components/sections/Footer.astro";
---

<MainLayout title="تواصل معنا | إراتيك">
  <Navbar />

  <main class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="pt-40 pb-20 relative overflow-hidden">
      <div
        class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/2"
      >
      </div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1
          class="text-5xl md:text-7xl font-black text-foreground mb-8 leading-tight"
        >
          تواصل <span class="text-primary">معنا</span>
        </h1>
        <p class="text-xl text-muted max-w-3xl mx-auto leading-relaxed">
          نحن هنا لمساعدتك. تواصل معنا اليوم لنبدأ رحلة النجاح الرقمي
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="pb-32 px-4 md:px-6">
      <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div class="space-y-8">
            <div
              class="bg-surface rounded-[2rem] p-8 border border-foreground/5"
            >
              <h2 class="text-3xl font-black text-foreground mb-6">
                معلومات التواصل
              </h2>

              <div class="space-y-6">
                <div class="flex items-start gap-4">
                  <div
                    class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6 text-primary"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-foreground mb-1">الهاتف</h3>
                    <p class="text-muted" dir="ltr">+966 XX XXX XXXX</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div
                    class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6 text-primary"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path
                        d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                      ></path>
                      <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-foreground mb-1">
                      البريد الإلكتروني
                    </h3>
                    <p class="text-muted">info@erateek.com</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div
                    class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center flex-shrink-0"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-6 h-6 text-primary"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                      ></path>
                      <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-foreground mb-1">الموقع</h3>
                    <p class="text-muted">المملكة العربية السعودية</p>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="bg-gradient-to-br from-primary/20 to-secondary/20 rounded-[2rem] p-8"
            >
              <h3 class="text-2xl font-black text-foreground mb-4">
                ساعات العمل
              </h3>
              <div class="space-y-2 text-muted">
                <p>الأحد - الخميس: 9:00 ص - 6:00 م</p>
                <p>الجمعة - السبت: مغلق</p>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-surface rounded-[2rem] p-8 border border-foreground/5">
            <h2 class="text-3xl font-black text-foreground mb-6">أرسل رسالة</h2>

            <form class="space-y-6">
              <div>
                <label
                  for="name"
                  class="block text-sm font-bold text-foreground mb-2"
                  >الاسم</label
                >
                <input
                  type="text"
                  id="name"
                  class="w-full px-4 py-3 rounded-xl bg-background border border-foreground/10 focus:border-primary focus:outline-none transition-colors"
                  placeholder="اسمك الكامل"
                  required
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-bold text-foreground mb-2"
                  >البريد الإلكتروني</label
                >
                <input
                  type="email"
                  id="email"
                  class="w-full px-4 py-3 rounded-xl bg-background border border-foreground/10 focus:border-primary focus:outline-none transition-colors"
                  placeholder="email@example.com"
                  required
                />
              </div>

              <div>
                <label
                  for="subject"
                  class="block text-sm font-bold text-foreground mb-2"
                  >الموضوع</label
                >
                <input
                  type="text"
                  id="subject"
                  class="w-full px-4 py-3 rounded-xl bg-background border border-foreground/10 focus:border-primary focus:outline-none transition-colors"
                  placeholder="موضوع الرسالة"
                  required
                />
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-bold text-foreground mb-2"
                  >الرسالة</label
                >
                <textarea
                  id="message"
                  rows="6"
                  class="w-full px-4 py-3 rounded-xl bg-background border border-foreground/10 focus:border-primary focus:outline-none transition-colors resize-none"
                  placeholder="اكتب رسالتك هنا..."
                  required></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-primary text-white px-6 py-4 rounded-xl font-black text-lg hover:scale-[1.02] transition-transform"
              >
                إرسال الرسالة
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</MainLayout>

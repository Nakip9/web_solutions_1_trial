---
import { twMerge } from "tailwind-merge";

interface Props extends astroHTML.JSX.InputHTMLAttributes {
  label?: string;
}

const { label, id, class: className, ...props } = Astro.props;
---

<div class="flex flex-col gap-2">
  {
    label && (
      <label for={id} class="text-sm font-medium text-muted">
        {label}
      </label>
    )
  }
  <input
    id={id}
    class={twMerge(
      "px-4 py-2 rounded-lg border border-slate-200 bg-white/50 focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all",
      className
    )}
    {...props}
  />
</div>

---
const clients = ["براند 1", "شركة التقنية", "مؤسسة الإبداع", "نايس ديزاين", "براند 2", "شركة الخليج"];
---

<section class="py-20 bg-white overflow-hidden">
  <div class="container mx-auto px-6 mb-12">
    <p class="text-center text-slate-400 font-bold uppercase tracking-widest text-sm">شركاء النجاح الذين وضعوا ثقتهم بنا</p>
  </div>
  
  <div class="relative flex overflow-x-hidden border-y border-slate-50 py-10 bg-[#fafafa]/50">
    <div class="animate-marquee whitespace-nowrap flex items-center gap-20">
      {clients.map(client => (
        <span class="text-3xl md:text-5xl font-black text-slate-200 hover:text-primary transition-colors cursor-default whitespace-nowrap">
          {client}
        </span>
      ))}
    </div>

    <div class="absolute top-10 flex items-center gap-20 animate-marquee2 whitespace-nowrap ml-20">
      {clients.map(client => (
        <span class="text-3xl md:text-5xl font-black text-slate-200 hover:text-primary transition-colors cursor-default whitespace-nowrap">
          {client}
        </span>
      ))}
    </div>
  </div>
</section>

<style>
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  .animate-marquee2 {
    animation: marquee2 30s linear infinite;
  }

  @keyframes marquee {
    0% { transform: translateX(0%); }
    100% { transform: translateX(100%); }
  }
  @keyframes marquee2 {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(0%); }
  }
</style>